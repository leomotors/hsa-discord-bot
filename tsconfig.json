{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["./src/**/*", "global.d.ts"]
}
